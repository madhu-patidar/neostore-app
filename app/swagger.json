    },
    "CustomerUpdateAddress": {
      "type": "object",
      "required": [
        "cust_id",
        "cust_address",
        "cust_pincode",
        "cust_city",
        "cust_state",
        "cust_country"
      ],
      "properties": {
        "cust_id": {
          "type": "integer"   
        },
        "cust_address": {
          "type": "string"   
        },
        "cust_pincode": {
          "type": "string"
        },
        "cust_city": {
          "type": "string"       
        },
        "cust_state": {
          "type": "string"         
        },
        "cust_country": {
          "type": "string"         
        },
        "cust_gender": {
          "type": "string"
        }
      }
    },
    "CustomerDeleteAddress": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "integer"   
        }
      }
    }
  },
 "securityDefinitions": {

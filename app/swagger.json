  },
  "host": "localhost:5000",
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/register": {
      "post": {
        "tags": ["Customer Registration"],
        "summary": "Registering new Customer",
        "description": "This API is used for registering details of new customer.",
        "consumes": ["application/x-www-form-urlencoded"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "cust_email",
            "description": "Enter Email",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_pass",
            "description": "Enter Password",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_confirmPass",
            "description": "Enter Confirm Password",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_phone",
            "description": "Enter Contact No",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_gender",
            "description": "Enter Gender",
            "in": "formData",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Operation Successful"
          },
          "404":{
            "description": "Operation Failed"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Customer Authenticate"],
        "summary": "Check for Valid user or not.",
        "description": "This API validates email and password of Customer",
        "consumes": ["application/x-www-form-urlencoded"],
        "produces": ["application/json"],
        "parameters": [
          
          {
            "name": "cust_email",
            "description": "Enter Email",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_pass",
            "description": "Enter Password",
            "in": "formData",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Operation Successful"
          },
          "404":{
            "description": "Operation Failed"
          }
        }
      }
    },
    "/profile": {
      "post": {
        "tags": ["Customer Update Profile"],
        "summary": "Update about yourself.",
        "description": "Here, Customer can update his/her profile.",
        "consumes": ["application/x-www-form-urlencoded"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "profile_image",
            "description": "Upload Profile Image ",
            "in": "formData",
            "required": true,
            "type": "file"
          },
          {
            "name": "cust_Fname",
            "description": "Enter First Name",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_Lname",
            "description": "Enter Last Name",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_email",
            "description": "Enter Email",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_dob",
            "description": "Enter DOB",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_phone",
            "description": "Enter Contact No",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_gender",
            "description": "Enter Gender",
            "in": "formData",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Operation Successful"
          },
          "404":{
            "description": "Operation Failed"
          }
        }
      
    }
    },
    "/address": {
      "post": {
        "tags": ["Customer Add Address"],
        "summary": "Add your address.",
        "description": "Here, Customer can add his/her address.",
        "consumes": ["application/x-www-form-urlencoded"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "cust_address",
            "description": "Enter Address",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_pincode",
            "description": "Enter Your Pincode",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_city",
            "description": "Enter Your City",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_state",
            "description": "Enter Your State",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "cust_country",
            "description": "Enter Your Country",
            "in": "formData",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Operation Successful"
          },
          "404":{
            "description": "Operation Failed"
          }
        }
    }
  },
  "/deladdress/{id}": {
    "post": {
      "tags": ["Customer Delete Address"],
      "summary": "Delete your address.",
      "description": "Here, Customer can delete his/her address.",
      "consumes": ["application/x-www-form-urlencoded"],
      "produces": ["application/json"],
      "parameters": [
        {
          "name": "id",
          "description": "Enter Address Id",
          "in": "path",
          "required": true,
          "type": "integer"
        }       
      ],
      "responses": {
        "200": {
          "description": "Operation Successful"
        },
        "404":{
          "description": "Operation Failed"
        }
      }
  }
}
  },
  "definitions": {
    "CustomerRegistration": {
      "type": "object",
      "required": [
        "cust_email",
        "cust_pass",
        "cust_confirmPass",
        "cust_phone",
        "cust_gender"
      ],
      "properties": {
        "cust_email": {
          "type": "string"
        },
        "cust_pass": {
          "type": "string"
        },
        "cust_confirmPass": {
          "type": "string"
        },
        "cust_phone": {
          "type": "string"
        },
        "cust_gender": {
          "type": "string"
        }
      }
    },
    "CustomerAuthentication": {
      "type": "object",
      "required": ["cust_email", "cust_pass"],
      "properties": {
        "cust_email": {
          "type": "string"
